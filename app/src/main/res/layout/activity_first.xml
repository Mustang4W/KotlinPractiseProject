<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".activity.FirstActivity">

    <com.mustang4w.wang.kotlinpractiseproject.widget.TitleLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        app:layout_constraintBottom_toBottomOf="parent" />

    <Button
        android:id="@+id/btnToSecond"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Button"
        app:layout_constraintTop_toTopOf="parent" />

    <Button
        android:id="@+id/btnToChat"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Chat"
        app:layout_constraintTop_toBottomOf="@id/btnToSecond" />

    <Button
        android:id="@+id/btnToListView"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="ListView"
        app:layout_constraintTop_toBottomOf="@id/btnToChat" />

    <Button
        android:id="@+id/btnToRecyclerView"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="RecyclerView"
        app:layout_constraintTop_toBottomOf="@id/btnToListView" />

    <Button
        android:id="@+id/btnTo9Patch"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="9-Patch"
        app:layout_constraintTop_toBottomOf="@id/btnToListView" />

    <Button
        android:id="@+id/btnToFragment"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Fragment"
        app:layout_constraintTop_toBottomOf="@id/btnTo9Patch" />

    <Button
        android:id="@+id/btnSendBroadcast"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="SendMyBroadcast"
        app:layout_constraintTop_toBottomOf="@id/btnToFragment" />

    <Button
        android:id="@+id/btnSendOrderBroadcast"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="SendOrderBroadcast"
        app:layout_constraintTop_toBottomOf="@id/btnSendBroadcast" />


</androidx.constraintlayout.widget.ConstraintLayout>